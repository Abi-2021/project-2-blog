{{!-- {{> post-data post }} --}}
<div class="team-area col-9 justify-content-center">
    <article class="post">
        <div class="title">
            <h3>{{post.title}}</h3>
        </div>
        <div class="muted-text allPost">
            <em>Posted by {{post.user.username}} on {{format_date post.created_at}}</em>
        </div>
        <div class="body allPost">
            {{post.post_text}}
        </div>
    </article>

    {{!-- add comment --}}
    {{#if loggedIn}}
        <form class="comment-form py-2">
            <div class="pb-3 allPost">
                <textarea class="form-control" rows="3" name="comment-body" id="post-text">{{post.post_text}}</textarea>
            </div>

            <div>
                <button type="submit" class="btn btn-success">Add Comment</button>
            </div>
        </form>
    {{/if}}

    {{> comments post.comments}}

</div>
{{#if loggedIn}}
    <script src="/javascript/comment.js"></script>
{{/if}}